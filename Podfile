
# Uncomment this line to define a global platform for your project
# platform :ios, '9.0'

target ‘SampleProject' do
# Comment this line if you're not using Swift and don't want to use dynamic frameworks
use_frameworks!

# Pods for SampleProject

pod 'GoogleMaps'
pod 'Firebase/Core'
pod 'Fabric'
pod 'Crashlytics'

#keyboard Manager
pod 'IQKeyboardManager'

#Object Mapping
use_frameworks!
pod 'EVReflection'

#Network Api
pod 'Alamofire'

#Alert Message
pod 'Toaster'

#Image Cache lib
pod 'Kingfisher', '~> 4.0'

#Swift Rx
pod "RxSwift"
pod "RxCocoa"

#UI
#pod 'Presentr'

#Logger
pod 'XCGLogger', '~> 6.0.2'

#pod "EVReflection", :git => 'https://github.com/evermeer/EVReflection.git', :branch => 'Swift3.0'

pod 'OHHTTPStubs'
pod 'OHHTTPStubs/Swift' # includes the Default subspec, with support for NSURLSession & JSON, and the Swiftier API wrappers


target ‘SampleProjectTests' do
inherit! :search_paths
use_frameworks!

pod 'OHHTTPStubs'
pod 'OHHTTPStubs/Swift' # includes the Default subspec, with support for NSURLSession & JSON, and the Swiftier API wrappers
end

target ‘SampleProjectUITests' do
inherit! :search_paths
# Pods for testing
end

end


